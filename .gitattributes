# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Configuration files
*.cfg text eol=lf
*.conf text eol=lf
*.ini text eol=lf
*.json text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf

# Requirements
requirements*.txt text eol=lf
Pipfile text eol=lf
Pipfile.lock text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files (explicitly marked to avoid issues)
*.mp4 binary
*.mp3 binary
*.wav binary
*.avi binary
*.mov binary
*.mkv binary
*.webm binary
*.m4a binary
*.aac binary
*.flac binary
*.ogg binary

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Archives
*.zip binary
*.tar binary
*.gz binary
*.bz2 binary
*.7z binary

# Python bytecode
*.pyc binary
*.pyo binary

# Whisper models
*.pt binary

# Executable files
*.exe binary
*.app binary
*.deb binary
*.rpm binary

